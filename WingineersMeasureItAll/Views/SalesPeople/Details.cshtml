@model SalesPersonDetailsViewModel

<h2>Details</h2>

<table class="table">
    <tbody>
        <tr>
            <th>Name</th>
            <td>@(Model.Name)</td>
        </tr>
        <tr>
            <th>Zip code</th>
            <td>@(Model.ZipCode)</td>
        </tr>
        <tr>
            <th>City</th>
            <td>@(Model.City)</td>
        </tr>
        <tr>
            <th>Address</th>
            <td>@(Model.Address)</td>
        </tr>
        <tr>
            <th>Hire date</th>
            <td>@(Model.HireDate)</td>
        </tr>
    </tbody>
</table>

<h2>Orders</h2>

<table class="table">
    <thead>
        <tr>
            <th>Order number</th>
            <th>Name</th>
            <th>Price</th>
            <th>Placed at</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var orderLine in Model.OrderLines)
        {
            <tr>
                <td>@(orderLine.Id)</td>
                <td>@(orderLine.OrderName)</td>
                <td>@(orderLine.OrderPrice)</td>
                <td>@(orderLine.OrderDate)</td>
            </tr>
        }
    </tbody>
</table>

